{% extends 'DimTodoBundle:Default:base.html.twig' %}

{% block body %}
    <h1>Список акций</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Колличество</th>
                <th>Дата приобретения</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for stoke in stokes %}
            <tr>
                <td>{{ stoke.name }}</td>
                <td>{{ stoke.count }}</td>
                <td>{% if stoke.date %}{{ stoke.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('stoke_show', { 'id': stoke.id }) }}">Показать</a>
                        </li>
                        <li>
                            <a href="{{ path('stoke_edit', { 'id': stoke.id }) }}">Редактировать</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('stoke_new') }}">Купить еще акций</a>
{% endblock %}
